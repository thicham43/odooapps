<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record id="product_search_view" model="ir.ui.view">
        <field name="name">product.search.view</field>
        <field name="model">product.search</field>
        <field name="arch" type="xml">
            <form class="prod_search_form">
                <group>
                    <group>
                        <field name="frs_id" context="{'frs_changed':True}" options="{'limit': 10, 'no_create': True, 'no_open':true}"
                               domain="[('supplier_rank', '>', 0), ('is_company', '=', True)]"/>
                    </group>
                    <group>
                        <field name="name"/>
                        <field name="reference" placeholder="fournisseur ou commerciale"/>
                    </group>
                </group>
                <group>
                    <div class="control-btns">
                        <div>
                        </div>
                        <div class="float_right">
                            <button string="Terminer" name="action_close" class="btn-link" type="object"/>
                            <span style="padding: 5px 0 0;margin:0 7px;font-size: 15px;color:#7c7bad;">|</span>
                            <button string="Initialiser" name="reset" class="btn-link" type="object"/>
                        </div>
                    </div>
                </group>
                <div style="text-align:center; color:red;font-size: 13px;">
                    <field name="nb_prods" nolabel="1" readonly="1" attrs="{'invisible': [('nb_prods','=','')]}"/>
                </div>
                <notebook>
                    <page string="Products">
                        <group style="margin-top: 0;" attrs="{'invisible': [('product_ids','=',[])]}">
                            <field name="product_ids" nolabel="1" readonly="1" widget="m2m_selectable">
                                <tree editable="bottom" class="list_product_search">
                                    <field name="name" string="Désignation"/>
                                    <field name="frs_code" string="Réf. Frs"/>
                                    <field name="unit_price"/>
                                    <field name="id"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                    <page string="Used Products" class="page_inserted_products">
                        <group>
                            <field name="inserted_products" nolabel="1" readonly="1">
                                <tree editable="bottom" class="list_inserted_products">
                                    <field name="name"/>
                                    <field name="frs_code"/>
                                    <field name="unit_price"/>
                                </tree>
                            </field>
                        </group>
                    </page>
                </notebook>
                <footer/>
            </form>
        </field>
    </record>


	
</odoo>
